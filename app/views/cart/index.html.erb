<title>Cart | MXMNY</title>


<body style="background-image:none;">


	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>


<table id="cart-table">

<% if session[:cart] && session[:cart].count > 0 %>

	<tr><th></th><th>ITEM</th><th>PRICE</th><th>SIZE</th><th>REMOVE</th></tr>

<% session[:cart].delete('') 
@total = 0
@product_names = ''
@count_products =  ''
@shipping_charges = ''
	session[:cart].each do |cart|
		cart.each do |product|
			if product[2]!=nil
			@total = @total+product[1].to_i
			@product_names = @product_names+", "+product[0]
			if product[3]!=nil
				@product_names = @product_names+", "+product[3]
				end
session[:product_names] = @product_names;
			%>
	<tr><td style="width:10%;"><img style="width:100%;" src="<%= product[5] %>"></td><td><%= product[0] %></td><td><%= product[1] %></td><td><%= product[3] %></td><td><a href="cart?remove=<%=product[4]%>">X</a></td></tr> 
		<%end 
	end
end %>
</td><td>
</td></tr>

<%else %>
	<tr><td>No product in the cart</td></tr>
<%
end
 %>
</table>
	<a href="/shipping"><button class="continue-button">Continue</button></a>
</body>
