<hr>

		
   <h3 class="index-section-titles">MEDIA</h3>

  	<ul id="media-list"> 
   		<li>
		  	<a href="/collections/253"><img src="/assets/media-list-4.jpg"></a>  	
  		</li>   		   		

  		<li>
		  	<a href="/brand"><img src="/assets/media-list-2.jpg"></a>  	
  		</li>   		

  		<li>
		  	<a href="http://www.instagram.com/mercytomankind.ny"><img src="assets/media-list-3.jpg"></a>  	
  		</li>
  	</ul>

<hr>

	<h3 id="film-heading" class="index-section-titles">FILM</h3>
	<!-- MOBILE INDEX VIEO - HIDDEN ON DESKTOP-->
	 <iframe id="index-film" src="https://player.vimeo.com/video/216327730" width="920" height="680" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
	<!-- END MOBILE INDEX VIDEO  -->

	<!-- DESKTOP FILM LSIT -->
  	<ul id="film-list">

   		<li>
		  	<a href="/media"><img class="film-list-img" src="assets/film-list-1.jpg"></a><br>
		  	<p style="font-size: 10px;margin:10px 0px;font-family: 'Helvetica';font-weight: bold;">
		  		PRE-SPRING 17: GODSEND
		  	</p>
  		</li>   		

  		<li>
		  	<a href="/media"><img class="film-list-img" src="assets/film-list-2.jpg"></a><br>
		  	<p style="font-size: 10px;margin: 10px 0px;font-family: 'Helvetica';font-weight: bold;">WHERE DOES YOUR CONFIDENCE COME FROM?</p>	
  		</li>   		

  	</ul>

<hr>


	<h3 style="margin-bottom: 20px;" class="index-section-titles">POPULAR</h3>
	<!-- MOBILE PRODUCT TABLE - HIDDEN ON DESKTOP -->
	<table class="products" id="mobile-product-table">
	<tr>
 		<td class="col">
			<ul id="listings_on_welcome_index">

			<div class="mobile-line-separator"></div>
			<% @limited_final.each do |listing| %>

            	<% if listing.price == 1  %>
            		<% @limited_final.delete(listing) %>
	    		<% end %>
            	<li>
	            	<figure class="listings-figure"> 	
			            	
			        <%= link_to image_tag(listing.default_picture.image.url), listing_path(listing) %>
			            	
	            	<a href="<%=listing_path(listing)%>">
			            	<figcaption class="listings-figcaption"> 

			            		<p> 
									<%= listing.name.upcase %><br><br><br> 
			            			<%=	listing.description.upcase.html_safe%> <br><br>
			            			
			            			<% if listing.on_sale == false %> <!-- IF LISTING IS NOT ON SALE -->
				            			<span style="padding:0px;color:black;">

				            				$<%= listing.price %>.00

				            			</span>
				            		<% else %>
										<span style="padding:0px;color:red;">

				            				$<%= listing.price %>.00

				            			</span>
										<span style="padding: 0px;text-decoration: line-through;">

											$<%= listing.original_price %>.00

										</span>
									<% end %>

			            		</p> 

			            	</figcaption>
					</a>
					<p class="mobile-figure-p"><%= listing.name.upcase %></p>
					<p class="mobile-figure-p"><%= listing.price %> USD</p> 

		           </figure>

			

				</li>
				<% end %>
				</ul>
			</td>
		</tr>
	</table>
<!-- END MOBILE PRODUCT TABLE  -->

<!-- DESKTOP PRODUCT LIST -->
	<ul id="desktop-products-list">
		<% @limited_final_desktop.each do |listing| %>
	    	
	    	<% if listing.price == 1  %>
	    		<% @limited_final.delete(listing) %>
			<% end %>
	    	
	    	<li>    	
		        <%= link_to image_tag(listing.default_picture.image.url), listing_path(listing) %>
 				<p class="desktop-products-list-text"><%= listing.name.upcase %></p>
				<p class="desktop-products-list-text"><%= listing.price %> USD</p>  
			</li>
		<% end %>
	</ul>
<!-- END DESKTOP PRODUCT LIST -->


<!-- End Wrapper -->
</div>

</body>

</html>
