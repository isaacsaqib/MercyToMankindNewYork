<html>
	<head>
		<title> MERCY X MANKIND NEW YORK </title>
		<%= javascript_include_tag "application.js" %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<!-- BEGIN PRIVY WIDGET CODE -->
		<script type='text/javascript'> var _d_site = _d_site || '39F45F7BD0352326343B684B'; </script>
		<script src='//widget.privy.com/assets/widget.js'></script>
		<!-- END PRIVY WIDGET CODE -->
		<meta name="description" content="MERCY X MANKIND NEW YORK | Contemporary Urbanwear For The Modern Being | SPRING/SUMMER 2016 Available Now."/>
	</head>


<div class="wrapper">

<body>

<!-- DESKTOP SWIPER  -->
  <div class="swiper-container1">
    <div style="height:650px;margin-bottom: 15px;" id="#index-swiper-wrapper" class="swiper-wrapper">
		    <% @listing_desktop_index_slide = Listing.find_by_id(247) %>
			<% @pictures = @listing_desktop_index_slide.pictures.order(description: :asc)  %>
			<% @pictures.each do |pic| %>
			<% if logged_in? %>

			      <div class="swiper-slide">
			      	<a href="/listings/<%=@listing_desktop_index_slide.id%>">
						<img style="width: 98%" class="list-pic-index" src="<%=pic.image.url%>">
					</a>
			      </div>

			    <% else %>

			      <div class="swiper-slide">
		   		 	<a href="/<%=pic.link%>">
						<img class="list-pic-index" src='<%= pic.image.url %>'>
			      	</a> 
			      </div>
				<% end %>
      		<% end %>


    </div>

    <div style="left:35px;" class="swiper-button-prev swiper-button-white"></div>
    <div style="right:35px;" class="swiper-button-next swiper-button-white"></div>
    
    <!-- Add Pagination -->
    <div style="height: 60px;padding-left:1000px" class="swiper-pagination"></div>

  </div> 

<!-- END DESKTOP SWIPER-->



 <!-- MOBILE SWIPER -->
  <div class="swiper-container2">
    <div style="height:1300px; margin-bottom: 15px;" id="#index-swiper-wrapper" class="swiper-wrapper">
		    <% @listings_mobile_index_slide = Listing.find_by_id(248) %>
			<% @pictures = @listings_mobile_index_slide.pictures.order(description: :asc)  %>
			<% @pictures.each do |pic| %>
			<% if logged_in? %>
		      
		      <div class="swiper-slide">
		      	<a href="/listings/<%=@listings_mobile_index_slide.id%>">
					<img class="list-pic" src="<%=pic.image.url%>">
				</a>
		      </div>
		    <%else%>

		      <div class="swiper-slide">
	   		 	<a href="/<%=pic.link%>">
					<img class="list-pic" src="<%=pic.image.url%>" %>
		      	</a>
		      </div>
		      <% end %>

      	<% end %>
    </div>
    <!-- Add Pagination -->
        <div style="left:35px;" class="swiper-button-prev swiper-button-white"></div>
    <div style="right:35px;" class="swiper-button-next swiper-button-white"></div>
    
    <div style="height:150px;z-index: 100;" class="swiper-pagination"></div>

  </div> 
  <!-- END MOBILE SWIPER  -->


