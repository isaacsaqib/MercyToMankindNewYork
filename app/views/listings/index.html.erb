<table class="products" id="new">
	<tr>
		<td class="col">
			<ul>
			<% @listings_new.each do |listing| %>

				<% if listing.pictures.first %>
            	<li>
            	<!-- listing image pictures -->
            	<%= link_to image_tag(listing.pictures.first.image.url), listing_path(listing) %>
            	<% else %>
              		N/A
            	<% end %>
				
				<!-- Name, price and buttons -->
				<form method="get">
				<input type="hidden" name="id" value="<%=listing.id%>">
				<a href="<%=listing_path(listing)%>"><%=listing.name %></a><br> 
				<p>$<%=listing.price %>.00</p><br>
				<div class="line-separator"></div>
				
				 <br/>
							 <% if logged_in? %>
							<p><%=link_to 'Edit', edit_listing_path(listing) %></p>
							<p><a href="?remove=<%=listing.id%>">Delete</a></p><br>
							<% end %>
							<br>
							<br>
				</form>	

				</li>
				<% end %>
			</ul>
		</td>
	</tr>
</table>



