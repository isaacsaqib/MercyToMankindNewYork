				<% @upsell_listings_arr.delete(@listing_222) %>
		<% end %>
		<% if @upsell_listings_arr.include?  @listing_202 %>
				<% @upsell_listings_arr.delete(@listing_202) %>
		<% end %>
		<% if @upsell_listings_arr.include?  @listing_130 %>
			<% @upsell_listings_arr.delete(@listing_130) %>
		<% end %>
		<% if @upsell_listings_arr.include?  @listing_144 %>
				<% @upsell_listings_arr.delete(@listing_144) %>
		<% end %>
		<% if @upsell_listings_arr.include?  @listing_199 %>
			<% @upsell_listings_arr.delete(@listing_199) %>
		<% end %>	
		<!-- End collection id removal -->

		<!-- Start upsell pic list -->
		<ul id="upsell_listings_pics">
			<p style="text-decoration: underline;">STYLE WITH:</p>
			<% @upsell_listings_arr.each do |listing| %>

		

			<!-- Creating li tag -->
		  	<li>
		  		<a href="/listings/<%=listing.id%>"><%= image_tag(listing.default_picture.image.url) %></a>
	      		<!-- Using the default picture for the listings contained and displaying it in a list -->
