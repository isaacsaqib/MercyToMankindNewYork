<h1>Editing article</h1>
 


<%= form_for :listing, url: listing_path(@listing),:html => {:multipart => true}, method: :patch do |f| %>
 
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.label :size %>
  <%= f.text_field :size %>

 <%= file_field_tag "images[]", type: :file, multiple: true %>

    <%=f.label :section %>
   <%=f.text_field :section %>
    <%= f.submit %>
 
<% end %>
 
