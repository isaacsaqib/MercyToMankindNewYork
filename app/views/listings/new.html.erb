	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag "application.js" %>

<% if logged_in? %>
<div style="padding-bottom:140px;background-color:white; width:100%;text-align:center;height:400px;padding-top:50px;">
<%= form_for @listing, :url => listings_path, :html => { :multipart => true } do |f| %>
	<%= f.label(:name) %>
	<%=f.text_field :name %><br><br>
	<%= f.label :price %>
	<%= f.number_field :price %><br><br>
	<%= f.label "New?" %>
  	<%= f.check_box :is_new %><br><br>  
	<%= f.label :fabric %>
	<%= f.text_field :fabric %><br><br>
	<%= f.label :fit %>
	<%= f.text_field :fit %><br><br>
	<%= f.label :care %>
	<%= f.text_field :care %><br><br>
	<%= f.label :position %>
  <%= f.number_field :position %><br><br>

   	<%=f.label :size %>
  	<input type="text" name="listing[size]" /><br><br>
  	   	<%=f.label :description %>
	 <%=f.text_area :description %><br><br>
	<%=f.label :section %>
	<%= f.select :section, options_for_select([["Select Type", ""], "Hoodies", "Long Sleeves", "Short Sleeves", "Tees", "Tanks",  "Bottoms", "Denim", "Head", "Wristwear","Jackets", "Collection", "Press", "Accessories", "Slideshow"]) %>	<br><br>
	<%=f.label :collection %>
	<%= f.select :collection, options_for_select([["Select Collection", ""],"PRE-SPRING 17","FALL/WINTER2016", "SPRING/SUMMER2016","FALLWINTER2015","JUDGEMENTDAYCAPSULE"]) %>	<br><br>
 	<%= file_field_tag "images[]", type: :file, multiple: true %><br><br>

	<%=f.submit %>

	<% end %>

</div>

<% else %>

<p>You must be logged in to view this page</p>

<% end %>